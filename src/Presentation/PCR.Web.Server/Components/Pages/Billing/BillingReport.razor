@page "/billing"
@inject IMediator Mediator
@using PCR.Core.Application.Features.Billing.Queries

<div class="bg-white p-6 rounded-xl shadow-lg">
	<h1 class="text-2xl font-bold text-gray-800 mb-6">@L["Billing_Title"]</h1>
    <div class="mb-4 grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
            <label class="block text-sm font-medium text-gray-700">@L["Billing_Contract"]</label>
            <select @bind="selectedContract" @bind:after="LoadBillingData" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">@L["Billing_SelectContract"]</option>
                <option value="CON001">CON001 - Cliente 1</option>
                <option value="CON002">CON002 - Cliente 2</option>
            </select>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700">@L["Billing_Period"]</label>
            <input type="month" value="@selectedPeriod" @onchange="@((ChangeEventArgs e) => { selectedPeriod = e.Value?.ToString() ?? "2024-12"; LoadBillingData(); })" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div style="display: flex; justify-content: flex-end; align-items: center; gap: 1rem;">
            <button @onclick="ExportToExcel" class="bg-blue-600 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-700 transition duration-150 ease-in-out">
                @L["Common_ExportToExcel"]
            </button>
            <button @onclick="SendToJDE" disabled="@jdeSent" class="@(jdeSent ? "bg-gray-400 cursor-not-allowed" : "bg-green-600 hover:bg-green-700") text-white px-4 py-2 rounded-lg shadow-md transition duration-150 ease-in-out">
                @(jdeSent ? @L["Billing_Sent"] : @L["Billing_SendToJDE"])
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-12">
            <Spinner class="inline w-12 h-12 text-blue-600" />
            <p class="mt-2 text-gray-500">@L["Common_Loading"]</p>
        </div>
    }
    else if (showReport && billingItems.Any())
    {
		<h2 class="text-xl font-semibold text-gray-700 mb-4 border-t pt-4">@L["Billing_ItemsDetail"]</h2>

        <div class="overflow-x-auto">
			<Table Hoverable="true" Striped="true">
				<TableHead>
					<TableRow>
						<CustomTableHeadCell>@L["Billing_Col_ClientNemo"]</CustomTableHeadCell>
						<CustomTableHeadCell>@L["Billing_Col_Description"]</CustomTableHeadCell>
						<CustomTableHeadCell>@L["Billing_Col_GeneratorNemo"]</CustomTableHeadCell>
						<CustomTableHeadCell>@L["Billing_Col_Quantity"]</CustomTableHeadCell>
						<CustomTableHeadCell>@L["Billing_Col_UnitPrice"]</CustomTableHeadCell>
						<CustomTableHeadCell>@L["Billing_Col_Amount"]</CustomTableHeadCell>
						<CustomTableHeadCell>@L["Billing_Col_Currency"]</CustomTableHeadCell>
					</TableRow>
				</TableHead>
				<TableBody class="divide-y">
					@foreach (var item in billingItems)
					{
						<TableRow class="bg-white">
							<TableCell Class="whitespace-nowrap font-medium text-gray-900">@item.NemoCliente</TableCell>
							<TableCell>@item.Description</TableCell>
							<TableCell>@(item.NemoGenerador ?? "-")</TableCell>
							<TableCell>@item.Quantity</TableCell>
							<TableCell>@item.UnitPrice</TableCell>
							<TableCell Class="whitespace-nowrap text-gray-900 font-bold">@item.Amount</TableCell>
							<TableCell>@item.Currency</TableCell>
						</TableRow>
					}
				</TableBody>
			</Table>
        </div>

        <div class="mt-6 flex justify-end">
            <div class="text-right p-4 border rounded-lg bg-gray-50">
                <p class="text-lg font-bold text-gray-800">@L["Billing_TotalToBill"]</p>
                <p class="text-2xl font-extrabold text-blue-600">@GetTotalUSD()</p>
                <p class="text-sm text-gray-500">@GetTotalARS()</p>
            </div>
        </div>

        @if (jdeSent)
        {
            <div class="mt-4 p-4 bg-green-100 border-l-4 border-green-500 text-green-700 rounded-md">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium">
							@L["Billing_SentSuccessfully"]
                        </p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="mt-2 text-sm text-gray-500">@L["Billing_EmptyMessage"]</p>
        </div>
    }
</div>

@code {
    private string selectedContract = "";
    private string selectedPeriod = "2024-12";
    private bool showReport = false;
    private bool jdeSent = false;
    private bool isLoading = false;
    private List<BillingItemDto> billingItems = new();

    private async Task LoadBillingData()
    {
        if (string.IsNullOrEmpty(selectedContract))
        {
            showReport = false;
            billingItems.Clear();
            return;
        }

        isLoading = true;
        showReport = false;

        var query = new GetBillingItemsQuery(selectedContract, selectedPeriod);
        var result = await Mediator.Send(query);

        if (result.Succeeded)
        {
            billingItems = result.Data!;
            showReport = billingItems.Any();
        }

        isLoading = false;
    }

    private void ExportToExcel()
    {
        Console.WriteLine("Exportando a Excel...");
    }

    private void SendToJDE()
    {
        jdeSent = true;
        StateHasChanged();
    }

    private string GetTotalUSD()
    {
        var total = billingItems
            .Where(i => i.Currency == "USD")
            .Sum(i => decimal.TryParse(i.Amount, out var amount) ? amount : 0);
        
        return $"USD {total:N2}";
    }

    private string GetTotalARS()
    {
        var total = billingItems
            .Where(i => i.Currency == "ARS")
            .Sum(i => decimal.TryParse(i.Amount, out var amount) ? amount : 0);
        
        return total > 0 ? $"(+ ARS {total:N2})" : "";
    }
}

