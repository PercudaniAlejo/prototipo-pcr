@page "/ia-strategy"

<h1 class="text-2xl font-bold text-gray-800 mb-6">Estrategia de Inteligencia Artificial (IA)</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    @foreach (var card in strategyCards)
    {
        <div class="bg-white rounded-xl shadow-lg p-6 border-t-4 border-@(card.Color)-600 transition duration-300 hover:shadow-xl">
            <h2 class="text-xl font-bold text-gray-800 mb-3 flex items-center">
                @((MarkupString)card.Icon)
                @card.Title
            </h2>
            <p class="text-gray-600">
                @card.Content
            </p>
        </div>
    }
</div>

<div class="mt-8">
    <IAProfitabilityChart Data="profitabilityData" 
                          TargetValue="18"
                          MostProfitable="CON002 (25%)"
                          BelowTarget="CON003 (8%)" />
</div>

